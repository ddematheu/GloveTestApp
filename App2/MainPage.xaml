        <Button x:Name="button4" Content="Run Motor 4" HorizontalAlignment="Left" Margin="241,134,0,0" VerticalAlignment="Top" Height="79" Width="185" Click="button4_Click"/>
        <Button x:Name="button5" Content="Run Motor 5" HorizontalAlignment="Left" Margin="241,245,0,0" VerticalAlignment="Top" Height="79" Width="185" Click="button5_Click"/>
        <Button x:Name="button6" Content="Run Motor 6" HorizontalAlignment="Left" Margin="445,134,0,0" VerticalAlignment="Top" Height="79" Width="185" Click="button6_Click"/>

    </Grid>
</Page>
